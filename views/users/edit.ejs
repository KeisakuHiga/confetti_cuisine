<div class="data-form">
  <form action="/users/:id/update" method="POST">
    <h2>Update <%= user.fullName %> information:</h2>
    <label for="inputFirstName">First Name</label>
    <input type="text" name="first" id="inputFirstName" value=<%= user.name.first %> autofocus>
    <label for="inputLastName">Last Name</label>
    <input type="text" name="last" id="inputLastName" value=<%= user.name.last %> >
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" value=<%= user.password %> required>
    <label for="inputEmail">Email address</label>
    <input type="email" name="email" id="inputEmail" value=<%= user.email %> required>
    <label for="inputZipCode">Zip Code</label>
    <input type="text" name="zipCode" id="inputZipCode" pattern="*" value=<%= user.zipCode %> required>
    <button type="submit">Edit!</button>
  </form>
</div>