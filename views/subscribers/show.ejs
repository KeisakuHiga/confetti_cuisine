<h1>Subscriber Data for <%= subscriber.getInfo() %> </h1>

<table class="table">
  <tr>
    <th>Name</th>
    <td><%= subscriber.name %> </td>
  </tr>
  <tr>
    <th>Email</th>
    <td><%= subscriber.email %> </td>
  </tr>
  <tr>
    <th>Zip Code</th>
    <td><%= subscriber.zipCode %> </td>
  </tr>
</table>

<% if (subscriber.courses) { %>
<h4 class="center">This subscriber's following courses</h4>
  <% subscriber.courses.forEach(c => { %>
    <a href="<%= `/courses/${c._id}` %> ">
      <%= c.title %>
    </a>
  <% }) %> 
<% } %>

<div>
  <a href="/subscribers">View all subscribers</a>
</div>
<div>
  <a href="<%= `/subscribers/${subscriber._id}/edit` %> ">Edit subscriber Details</a>
</div>
<div>
  <a href="<%= `/subscribers/${subscriber._id}/delete?_method=DELETE` %> "
    onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
</div>
